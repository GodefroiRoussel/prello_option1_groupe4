color-main-light = #fff //blanc
color-main-dark = #000 //noir
color-main-alert = red
color-main-warning = orange
color-main-success = green
color-1 = #004878 // text titre
color-2 = #C0BEB9 // objets - couleur de fond
color-3 = #F7F6F5 // couleur font
color-4 = #00AEEF // couleur text
color-5 = #FFD026 // couleur embelissement

font-main = 'Raleway', sans-serif

.textColorLight
  color color-main-light !important

.textColorDark
  color color-main-dark !important

.textColorAlert
  color color-main-alert !important

.textColorWarning
  color color-main-warning !important

.textColorSuccess
  color color-main-success !important

.textColor1
  color color-1 !important

.textColor2
  color color-2 !important

.textColor3
  color color-3 !important

.textColor4
  color color-4 !important

.textColor5
  color color-5 !important

.backgroundColor1
  background-color color-1 !important

.backgroundColor2
  background-color color-2 !important

.backgroundColor3
  background-color color-3 !important

.backgroundColor4
  background-color color-4 !important

.backgroundColor5
  background-color color-5 !important

/*--------- FORMS -------*/
label
  color color-4 !important

input[type=text]
  color color-1 !important

input[type=text]
  border none
&:focus
  border rem-calc(0.6) solid  color-5 !important

Button
  color color-3 !important
  background color-4 !important